<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_event_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/events"
        app:menu="@menu/fragment_events_app_bar"
        android:background="@color/color_white"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
        >

    </androidx.appcompat.widget.Toolbar>

    <CalendarView
        android:layout_marginTop="5dp"
        android:id="@+id/fragment_event_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textView_current_events"
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:textColor="@color/color_black"
        android:layout_height="wrap_content"/>
    <ListView
        android:id="@+id/fragment_events_list_view"
        android:layout_width="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_height="wrap_content"/>
</LinearLayout>