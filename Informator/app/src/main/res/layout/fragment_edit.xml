<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Change Password"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="37dp" />

            <EditText
                android:id="@+id/editPassword"
                android:background="@drawable/button_white_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:inputType="textPassword"
                android:hint="Password"/>

            <EditText
                android:id="@+id/editConfirmPassword"
                android:background="@drawable/button_white_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:inputType="textPassword"
                android:hint="Confirm password" />
            <Button
                android:id="@+id/editBtnChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_black_border"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Change Full Name And Phone"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="37dp" />
            <EditText
                android:id="@+id/editFullName"
                android:background="@drawable/button_white_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:inputType="textPersonName"
                android:hint="Full Name" />

            <EditText
                android:id="@+id/editPhone"
                android:background="@drawable/button_white_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:inputType="textPersonName"
                android:hint="Phone" />
            <Button
                android:id="@+id/editBtnChangeFNameAndPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_black_border"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="Change Profile Picture"
                android:textColor="#000000"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="37dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/editAddPhoto"
                    android:layout_width="60dp"
                    android:layout_height="44dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_black_border"
                    android:padding="5dp"
                    android:src="@drawable/ic_camera_alt_black_24dp"/>

                <ImageButton
                    android:id="@+id/editAddFromGallery"
                    android:layout_width="60dp"
                    android:layout_height="44dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_black_border"
                    android:padding="5dp"
                    android:src="@drawable/ic_photo_white_24dp" />
            </LinearLayout>
            <Button
                android:id="@+id/editBtnChangePicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/button_black_border"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
    </LinearLayout>

</LinearLayout>